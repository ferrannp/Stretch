{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The featured header }}
<header class="page-header">
    {{#if @blog.logo}}<a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
    <h1>{{@blog.title}}</h1>
    <h2>{{{@blog.description}}}</h2>
    <ul>
        <li role="presentation"><a href="http://github.com/ferrannp">Github</a></li>
        <li role="presentation"><a href="http://twitter.com/ferrannp">Twitter</a></li>
        <li role="presentation"><a href="http://linkedin.com/in/ferrannp">Linkedin</a></li>
    </ul>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">
    <hr class="before-content"/>
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>
